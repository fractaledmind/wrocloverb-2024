<h1 class="absolute -top-4 py-px px-2 -mx-2 uppercase font-bold text-lg">
  Session
</h1>
<%= link_to "&larr; Back to sessions".html_safe, sessions_path, class: "absolute -top-4 right-4 py-px px-2 -mx-2 border-2 border-transparent hover:border-black focus:outline-none focus:ring focus:ring-offset-0 focus:ring-blue-500" %>

<%= render @session %>

<br>

<div class="flex items-center gap-2">
  <%= link_to "Edit this session", edit_session_path(@session), class: "border border-black text-black bg-white py-1 px-2 cursor-pointer hover:bg-black hover:text-white focus:outline-none focus:ring focus:ring-offset-2 focus:ring-blue-500" %>
  <%= button_to "Destroy this session", @session, method: :delete, class: "border border-red-500 text-red-500 bg-white py-1 px-2 cursor-pointer hover:bg-red-500 hover:text-white focus:outline-none focus:ring focus:ring-offset-2 focus:ring-blue-500" %>
</div>
