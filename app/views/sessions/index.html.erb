<h1 class="absolute -top-4 py-px px-2 -mx-2 uppercase font-bold text-lg">
  Sessions
</h1>
<%= link_to "&plus; New session".html_safe, new_session_path, class: "absolute -top-4 right-4 py-px px-2 -mx-2 border-2 border-transparent hover:border-black focus:outline-none focus:ring focus:ring-offset-0 focus:ring-blue-500" %>

<div id="sessions">
  <% if @sessions.any? %>
    <table class="w-[calc(100%+2rem)] -mx-4 -mb-8">
      <thead>
        <tr class="border-b border-black text-left *:px-4">
          <th>Device</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @sessions.each do |session| %>
          <tr class="*:px-4 *:py-2">
            <td><%= session.user_agent %></td>
            <td class="flex gap-2">
              <%= link_to "Show", session, class: "border border-black text-black bg-white py-1 px-2 cursor-pointer hover:bg-black hover:text-white focus:outline-none focus:ring focus:ring-offset-2 focus:ring-blue-500" %>
              <%= link_to "Edit", edit_session_path(session), class: "border border-black text-black bg-white py-1 px-2 cursor-pointer hover:bg-black hover:text-white focus:outline-none focus:ring focus:ring-offset-2 focus:ring-blue-500" %>
              <%= button_to "Destroy", session, method: :delete, class: "border border-red-500 text-red-500 bg-white py-1 px-2 cursor-pointer hover:bg-red-500 hover:text-white focus:outline-none focus:ring focus:ring-offset-2 focus:ring-blue-500" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="flex items-center justify-center gap-2">
      <span class="">No sessions yet&hellip; Want to be the first?</span>
    </div>
  <% end %>
</div>
